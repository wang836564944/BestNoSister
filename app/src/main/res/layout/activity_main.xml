<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <fragment
        android:id = "@+id/main_tool_title_bar"
        android:name = "com.example.a1.bestnosister.ui.fragment.ToolbatFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "?attr/colorAccent"/>

    <TextView
        android:id = "@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/main_fragment_bottom"
        android:name="com.example.a1.bestnosister.ui.fragment.BottomFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"/>

</LinearLayout>